---
const { entry } = Astro.props;
const { Content } = await entry.render();
const data = entry.data;
const papers = data.papers.filter((paper) => !paper.hidden);
---

<div class="research-area">
  <div class="title">{data.title}</div>
  <div class="content">
    <Content />
  </div>
</div>

<style lang="scss">
  .research-area {
    border-radius: 0.2rem;
    overflow: hidden;
    box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
    margin-bottom: 2rem;

    &:last-child {
      margin-bottom: 0;
    }

    color: var(--c-text);
    display: flex;
    flex-direction: column;

    > .title {
      background-color: rgb(226, 240, 247);
      padding: 0.5rem;
      text-transform: uppercase;
    }
  }

  .content {
    padding: 0.5rem;

    .description {
      margin-bottom: 1rem;
    }
  }
</style>
