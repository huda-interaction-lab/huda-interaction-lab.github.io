---
import { getCollection, getEntryBySlug } from "astro:content";
const researchAreas = await getCollection("research-areas");
const { id } = Astro.props;
const tagData = researchAreas.filter((area) => area.slug === id)[0].data;
const color = tagData.color;
const title = tagData.title;
---

<a class="tag" style={{ "background-color": color }}>
  {title}
</a>

<style lang="scss">
  .tag {
    border-radius: 0.2rem;
    white-space: nowrap;
    padding: 0.2rem 0.5rem;
    font-size: 80%;
    margin-right: 1rem;
    overflow: hidden;
    box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
    text-transform: uppercase;
  }
</style>
