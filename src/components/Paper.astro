---
import Tag from "./Tag.astro";
const { entry } = Astro.props;
const data = entry.data;
---

<div class="paper">
  { // if there is no thumbnail nothing is displayed
    data.thumbnail && (
      <figure class={"paper-image " + data.status}>
        <img src={data.thumbnail} alt="paper Thumbnail" />
      </figure>
    )
  }
  <!-- TODO: Sort papers in descending order by year-->
  <div class="content">
    <div class="title">{data.title}</div>
    {data.authors && <div class="authors">{data.authors.join(", ")}</div>}
    {
      data.tags && (
        <div class="tags">
          {data.tags.map((t) => (
            <div class="tag">
              <Tag id={t} />
            </div>
          ))}
        </div>
      )
    }
  </div>
  <!-- TODO: links and a special emoji for awards! --->
  <!-- TODO: We can show top 10 and then more to show more ... -->
</div>

<style lang="scss">
  .paper {
    display: flex;
    flex-direction: row;
    overflow: hidden;
    border-left: 5px solid #f0f0f0;

    @media (max-width: 35rem) {
      flex-direction: column;
      flex-wrap: wrap;
    }

    .content {
      flex-grow: 1;
      padding: 0.5rem;

      .title {
        color: var(--c-neutral-header);
      }
      .description {
        font-size: 80%;
      }
      .authors {
        color: var(--c-bright-header);
        margin-bottom: 0.5rem;
        font-size: 80%;
      }
      .tags {
        margin-top: 0.5rem;
      }
    }

    figure {
      margin: 0;
      padding: 0;
      text-align: center;

      img {
        width: 100%;
        object-fit: cover;
        max-height: 10rem;
        min-height: 100%;
      }
    }
  }
</style>
